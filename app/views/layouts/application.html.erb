<!DOCTYPE html>
<html>
  <head>
    <%= display_meta_tags %>
    <%= csrf_meta_tags %>
    <link rel="ICON" href="<%= image_url('logo-browser.png') %>" type="image/ico" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,200,300,400" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Inconsolata" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to root_path, class:"navbar-brand" do %>
              <%= image_tag "logo-plain.png", alt:t("title") %>
            <% end %>
          </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <div class="search navbar-form navbar-left">
                    <%= form_tag search_path, id:"form-search", remote: true do %>
                    <input type="text" name="text" class="search-input" id="search-input" autofocus="true">
                    <!-- <input type="submit" value="Rechercher"> -->
                    <button class="btn btn-colored" id="sidebar-right-btn">Filtres</button>
                    <% end %>
                </div>
                <ul class="nav navbar-nav navbar-right">
                    <% if user_signed_in? %>
                    <li><%= link_to t("user.profile"), profile_path %></li>
                    <li><%= link_to t("devise.sessions.sign_out"), destroy_user_session_path, method: :delete %></li>
                    <% else %>
                    <li><%= link_to t("devise.sessions.new.sign_in"), new_user_session_path %></li>
                    <li><%= link_to t("devise.registrations.new.sign_up"), new_user_registration_path %></li>
                    <% end %>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                          +
                          <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                          <li>
                            <%= link_to "Create snippet", new_snippet_path %>
                          </li>
                          <li>
                            <%= link_to "Create object", new_snippet_path %>
                          </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
            <ul>
      </div>
      </nav>
    </header>
    <div id="sidebar-right" class="filter-menu hide">
      <ul>
        <%  @languages.each do |l| %>
        <li><%= l.cd %></li>
        <% end %>
      </ul>
    </div>
    <div id="response-search" class="closed" data-prototype="<a href='/snippets/__id__'><div class='response'><p class='title'>__name__</p><p class='lang'>__lang__</p></div></a>"></div>
    <div class="container">
      <%= yield %>
    </div>
    <footer></footer>
  </body>

</html>
