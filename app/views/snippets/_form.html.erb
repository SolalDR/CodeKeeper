<%= form_for(snippet) do |f| %>
  <% if snippet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(snippet.errors.count, "error") %> prohibited this snippet from being saved:</h2>
      <ul>
      <% snippet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
  </div>


  <div class="form-group">
    <%= f.text_field :name, class:"form-control", placeholder: true %>
  </div>

  <div class="form-group">
    <%= cktext_area :snippet, :description, cols: 40, ckeditor: { toolbar: 'mini' }, value: "Describe your snippet" %>
  </div>

  <div class="form-group">
    <%= f.label :lang_id %>
    <% langs_array = @languages.all.map { |language| [language.lib, language.id] } %>
    <%= select_tag "snippet[lang_id]", options_for_select(langs_array, snippet.lang_id), class:"form-control" %>
  </div>

  <div class="checkbox">
    <%= f.label :private %>
    <%= f.check_box :private %>
  </div>


  <% if action_name != "edit" %>
  <% snip = SnippetVersion.new %>
  <%= f.fields_for :snippet_versions, snip do |ff| %>
    <%= ff.text_area :content, placeholder: "Content", class:"codemirror-content", data: {cdMirrorMode:"javascript"} %>
    <%= ff.hidden_field :version %>
    <%= ff.hidden_field :label, value:"First Version" %>
  <% end %><!-- fields for -->
  <% end %><!-- action name -->


  <div class="actions">
    <%= f.submit t("actions.save") , class:"btn btn-colored" %>
  </div>
<% end %>
