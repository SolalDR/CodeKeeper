<%= render template: "application/sidebar",  locals: { user:@user } %>

<div class="body-aside">
    <div class="head-content">
      <div class="left">
        <% if @user.nickname %>
          <h1><%= @user.nickname %></h1>
          <h2><%= @user.fullname %> </h2>
        <% else  %>
          <h1><%= @user.fullname %></h1>
        <% end %>
      </div>
      <div class="links right">
        <% if @user.url_site %>
          <a href="<%= format_url(@user.url_site) %>" class="rs-link website"><span><%= @user.url_site %></span></a>
        <% end %>
        <% if @user.email %>
          <a href="mailto:<%= @user.email %>" class="rs-link email"><span><%= @user.email %></span></a>
        <% end %>
        <% if @user.url_github %>
          <a href="<%= @user.url_github %>" class="rs-link github"><span><%= @user.url_github %></span></a>
        <% end %>
      </div>
    </div>
    <div id="tabs" class="body-content">
      <div class="head-select">
        <ul>
          <span id="bar"></span>
          <li class="item-head-select"><a href="#overview-item">Overview</a></li>
          <li class="item-head-select"><a href="#snippet-item">Snippets</a></li>
          <li class="item-head-select"><a href="#object-item">Objets</a></li>
          <li class="item-head-select"><a href="#like-item">Likes</a></li>
          <li class="item-head-select"><a href="#setting-item">Réglages</a></li>
        </ul>
      </div>
      <div class="body-select">
        <div id="slide" class="container-select">
          <div id="overview-item" class="item-body-select">
            <div class="snippets list-drop-down">
              <% @user.snippets.each_with_index do |snippet, i| %>
              <%= render "snippets/product-drop-down", snippet: snippet %>
              <% end %>
            </div>
          </div>


          <div id="snippet-item" class="item-body-select">
              <h2>Snippets</h2>
              <div class="snippets list-drop-down">
                <% @user.snippets.each do |snippet| %>
                <%= render "snippets/product-drop-down", snippet: snippet %>
                <% end %>
              </div>
              <%= link_to t("snippet.actions.new"), new_user_snippet_path(user_id: current_user), class:"btn btn-colored" %>
          </div>


          <div id="object-item" class="item-body-select">
            I'm Object
          </div>


          <div id="like-item" class="item-body-select">
            <div class="snippets list-drop-down">
              <% @user.liked_snippets.each_with_index do |snippet, i| %>
              <%= render "snippets/product-drop-down", snippet: snippet %>
              <% end %>
            </div>
          </div>


          <div id="setting-item" class="item-body-select">
            <p class="margin-top-medium margin-bottom-medium">Modifier vos informations de connexions ainsi que vos donnée personnelles</p>
            <% if current_user %>
              <%= link_to t("actions.edit_account"), edit_user_registration_path, class:"btn btn-colored" %>
              <%= link_to t("actions.edit_profile"), edit_user_path(current_user), class:"btn btn-colored" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
